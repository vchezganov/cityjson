{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/vchezganov/cityjson/schema/definitions.json",
    "$defs": {
        "location": {
            "title": "Geographical Location of longitude, latitude and optional altitude",
            "type": "array",
            "minItems": 2,
            "maxItems": 3,
            "prefixItems": [
                {
                    "description": "Longitude",
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                },
                {
                    "description": "Latitude",
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                {
                    "description": "Altitude in meters",
                    "type": "number"
                }
            ]
        },

        "weekdays": {
            "title": "Array of weekdays",
            "type": "array",
            "uniqueItems": true,
            "items": {
                "enum": ["Mo", "Tu", "We", "Th", "Fr", "Sa", "Su"]
            }
        },

        "date": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "date"
                },
                {
                    "type": "string"
                }
            ]
        },

        "translation": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "object"
                }
            ]
        },

        "stopFeatures": {
            "type": "array",
            "items": {
                "enum": [
                    "wheelchair_access",
                    "elevator",
                    "upstairs_escalator",
                    "downstairs_escalator"
                ]
            }
        },

        "geometry": {
            "oneOf": [
                {
                    "description": "Reference identifier to the geometry with or without format",
                    "type": "string"
                },
                {
                    "description": "Geometry of the entity",
                    "type": "object",
                    "properties": {
                        "format": {
                            "description": "Format of the geometry data",
                            "enum": ["geojson", "shape"]
                        },
                        "data": {
                            "description": "Geometry data of the entity",
                            "type": {}
                        }
                    }
                }
            ]
        }
    }
}
